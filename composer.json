{
    "name": "communitales/symfony-microsoft365-mailer",
    "type": "symfony-mailer-bridge",
    "description": "Symfony Office365 Mailer Bridge",
    "keywords": ["office365", "microsoft365", "symfony", "mailer"],
    "homepage": "https://symfony.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Symfony Community",
            "homepage": "https://symfony.com/contributors"
        }
    ],
    "require": {
        "php": ">=8.2",
        "microsoft/microsoft-graph": "^2.49",
        "symfony/mailer": "^6.4|^7.3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": ">=3.88.2",
        "phpstan/phpstan": ">=2.1.31",
        "phpunit/phpunit": ">=12.4.1",
        "rector/rector": ">=2.2.3",
        "symfony/dotenv": ">=7.3.2",
        "symfony/http-client": ">=7.3.4"
    },
    "autoload": {
        "psr-4": { "Communitales\\Symfony\\Component\\Mailer\\Bridge\\Microsoft365\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "scripts": {
        "phpcs": "vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyse > docs/TODO-phpstan.md",
        "rector": "vendor/bin/rector process",
        "test": "vendor/bin/phpunit",
        "codecheck": [
            "@rector",
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": false,
            "tbachert/spi": false
        }
    }
}
